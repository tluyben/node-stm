{
  "name": "node-stm",
  "version": "1.0.1",
  "description": "A TypeScript implementation of Software Transactional Memory (STM) using SQLite",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "stm",
    "transactional-memory",
    "sqlite",
    "typescript",
    "concurrency"
  ],
  "author": "tluyben",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^8.3.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
